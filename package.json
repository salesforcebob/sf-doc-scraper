{
  "name": "@salesforcebob/sf-docs-mcp-server",
  "version": "1.3.2",
  "description": "MCP server for scraping Salesforce developer documentation and converting to Markdown. Use with Cursor, Claude Desktop, or any MCP client. Deploy to Heroku with one click.",
  "main": "dist/mcp-server.js",
  "types": "dist/mcp-server.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "scrape": "node dist/scraper.js",
    "start": "node dist/mcp-server.js",
    "dev": "tsc --watch",
    "serve": "node dist/mcp-server.js serve",
    "web": "node dist/mcp-server.js serve",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "sf-docs-mcp": "./dist/mcp-server.js"
  },
  "files": [
    "dist",
    "ReadMe.md",
    "AGENT_GUIDE.md",
    "Procfile",
    "app.json"
  ],
  "keywords": [
    "salesforce",
    "mcp",
    "model-context-protocol",
    "cursor",
    "claude",
    "ai-assistant",
    "documentation",
    "scraper",
    "puppeteer",
    "markdown",
    "typescript",
    "heroku"
  ],
  "author": "Robert Ullery",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salesforcebob/sf-doc-scraper.git"
  },
  "homepage": "https://github.com/salesforcebob/sf-doc-scraper#readme",
  "bugs": {
    "url": "https://github.com/salesforcebob/sf-doc-scraper/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.21.0",
    "puppeteer": "^23.0.0",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.4",
    "typescript": "^5.3.0"
  }
}
